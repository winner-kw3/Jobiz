{% extends 'base.html.twig' %}

{% block title %}About Jobiz - The IT Job Platform
{% endblock %}

{% block body %}
	<div
		class="font-[system-ui]">
		<!-- Banner Section -->
		<section class="relative h-80 bg-slate-700">
			<div class="absolute inset-0 overflow-hidden">
				<img src="{{ asset('assets/img/workplace-banner.jpg') }}" alt="Professional Workplace" class="w-full h-full object-cover opacity-40">
			</div>
			<div class="relative container mx-auto px-4 h-full flex items-center justify-center">
				<h1 class="text-4xl md:text-5xl font-bold text-white text-center">About Jobiz</h1>
			</div>
		</section>

		<!-- Mission Statement Section -->
		<section class="py-16 bg-white">
			<div class="container mx-auto px-4 md:px-8 max-w-6xl">
				<div class="text-center mb-12">
					<h2 class="text-3xl font-bold mb-6 text-slate-700">Our Mission</h2>
					<div class="w-24 h-1 bg-teal-600 mx-auto mb-8"></div>
					<p class="text-xl text-gray-600 max-w-4xl mx-auto">
						At Jobiz, our mission is to connect talented IT professionals with innovative companies 
						                    that value their skills and expertise. We believe in creating meaningful career opportunities 
						                    that benefit both job seekers and employers in the ever-evolving tech industry.
					</p>
				</div>
			</div>
		</section>

		<!-- Company History Section -->
		<section class="py-16 bg-gray-50">
			<div class="container mx-auto px-4 md:px-8 max-w-6xl">
				<h2 class="text-3xl font-bold mb-10 text-slate-700 text-center">Our Story</h2>

				<div class="grid md:grid-cols-2 gap-12 items-center mb-16">
					<div>
						<h3 class="text-2xl font-semibold mb-4 text-slate-700">How We Started</h3>
						<p class="text-gray-600 mb-4">
							Founded in 2020, Jobiz began as a small project to address the gap between IT talent and industry needs. 
							                        Our founders, experienced tech recruiters and developers themselves, recognized the unique challenges in 
							                        IT recruitment and set out to create a specialized platform.
						</p>
						<p class="text-gray-600">
							What started as a small job board quickly evolved into a comprehensive platform trusted by leading 
							                        tech companies and thousands of IT professionals around the world.
						</p>
					</div>
					<div class="rounded-lg overflow-hidden shadow-lg">
						<img src="{{ asset('assets/img/company-history.jpg') }}" alt="Company Beginnings" class="w-full h-auto">
					</div>
				</div>

				<div class="grid md:grid-cols-2 gap-12 items-center">
					<div class="order-2 md:order-1 rounded-lg overflow-hidden shadow-lg">
						<img src="{{ asset('assets/img/company-growth.jpg') }}" alt="Company Growth" class="w-full h-auto">
					</div>
					<div class="order-1 md:order-2">
						<h3 class="text-2xl font-semibold mb-4 text-slate-700">Where We Are Today</h3>
						<p class="text-gray-600 mb-4">
							Today, Jobiz stands as a leading IT recruitment platform, specializing in connecting companies 
							                        with qualified professionals across various tech domains - from web development and data science 
							                        to cybersecurity and cloud infrastructure.
						</p>
						<p class="text-gray-600">
							Our unique focus on the IT sector allows us to provide tailored experiences for both job seekers 
							                        and employers, resulting in better matches and successful long-term placements.
						</p>
					</div>
				</div>
			</div>
		</section>

		<!-- Team Section -->
		<section class="py-16 bg-white">
			<div class="container mx-auto px-4 md:px-8 max-w-6xl">
				<h2 class="text-3xl font-bold mb-10 text-slate-700 text-center">Our Team</h2>

				<div
					class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
					<!-- Team Member 1 -->
					<div class="text-center">
						<div class="w-40 h-40 mx-auto rounded-full overflow-hidden mb-4">
							<img src="{{ asset('assets/img/team-member1.jpg') }}" alt="Team Member" class="w-full h-full object-cover">
						</div>
						<h3 class="text-xl font-semibold text-slate-700">Sarah Johnson</h3>
						<p class="text-teal-600 mb-2">CEO & Co-founder</p>
						<p class="text-gray-600">15+ years in tech recruitment and HR management</p>
					</div>

					<!-- Team Member 2 -->
					<div class="text-center">
						<div class="w-40 h-40 mx-auto rounded-full overflow-hidden mb-4">
							<img src="{{ asset('assets/img/team-member2.jpg') }}" alt="Team Member" class="w-full h-full object-cover">
						</div>
						<h3 class="text-xl font-semibold text-slate-700">Michael Chen</h3>
						<p class="text-teal-600 mb-2">CTO & Co-founder</p>
						<p class="text-gray-600">Former software engineer with 10+ years experience</p>
					</div>

					<!-- Team Member 3 -->
					<div class="text-center">
						<div class="w-40 h-40 mx-auto rounded-full overflow-hidden mb-4">
							<img src="{{ asset('assets/img/team-member3.jpg') }}" alt="Team Member" class="w-full h-full object-cover">
						</div>
						<h3 class="text-xl font-semibold text-slate-700">Elena Rodriguez</h3>
						<p class="text-teal-600 mb-2">Head of Operations</p>
						<p class="text-gray-600">Expert in scaling tech businesses and streamlining processes</p>
					</div>
				</div>
			</div>
		</section>

		<!-- Contact Section -->
		<section class="py-16 bg-gray-50">
			<div class="container mx-auto px-4 md:px-8 max-w-6xl text-center">
				<h2 class="text-3xl font-bold mb-10 text-slate-700">Get In Touch</h2>

				<div class="max-w-2xl mx-auto">
					<div class="grid md:grid-cols-2 gap-8 mb-8">
						<div class="bg-white p-6 rounded-lg shadow-md">
							<svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10 mx-auto mb-4 text-teal-600" fill="none" viewbox="0 0 24 24" stroke="currentColor">
