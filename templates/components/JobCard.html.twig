<div class="bg-white rounded-lg shadow-md overflow-hidden border border-gray-100 hover:shadow-lg transition">
	<div class="p-6">
		<div class="flex items-center justify-between mb-4">
			<span class="{{ jobTypeClass }} text-xs font-medium px-3 py-1 rounded-full">{{ jobType }}</span>
			<div class="flex items-center">
				<span class="text-gray-500 text-sm">{{ location }}</span>
				{% if remoteAllowed|default(false) %}
					<span class="bg-green-100 text-green-800 text-xs px-2 py-1 rounded-full ml-2">Remote</span>
				{% endif %}
			</div>
		</div>
		<h3 class="text-xl font-bold text-slate-700 mb-2">{{ title }}</h3>
		<div class="flex items-center mb-4">
			<div class="w-10 h-10 bg-gray-200 rounded-full flex items-center justify-center mr-3">
				<span class="text-gray-500 font-bold">{{ companyInitials }}</span>
			</div>
			<span class="text-gray-600">{{ company }}</span>
		</div>
		<p class="text-gray-600 mb-5">{{ description }}</p>
		<a href="{{ path('app_job_show', {'id': job_id}) }}" class="text-teal-600 hover:text-teal-800 font-medium flex items-center">
			View details
			<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-1" viewbox="0 0 20 20" fill="currentColor">
				<path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
			</svg>
		</a>
	</div>
</div>
