{% extends 'base.html.twig' %}

{% block title %}Jobiz - Find Your Next Tech Position
{% endblock %}

{% block body %}
	<div
		class="font-[system-ui]">
		<!-- Hero Section -->
		<section class="bg-slate-700 text-white py-16">
			<div class="container mx-auto px-4 md:px-8 max-w-6xl">
				<div class="flex flex-col md:flex-row items-center justify-between">
					<div class="md:w-1/2 mb-8 md:mb-0">
						<h1 class="text-4xl md:text-5xl font-bold mb-4">Find Your Dream Tech Job</h1>
						<p class="text-xl mb-8">Connecting top IT talent with innovative companies</p>
						<div class="flex flex-wrap gap-4">
							<a href="{{ path('app_job_index') }}" class="bg-teal-600 hover:bg-teal-700 text-white py-2 px-6 rounded-full font-medium transition">Browse Jobs</a>
							<a href="{{ path('app_about') }}" class="bg-transparent hover:bg-white hover:text-slate-700 text-white py-2 px-6 rounded-full font-medium border border-white transition">About Us</a>
						</div>
					</div>
					<div class="md:w-1/2">
						<div class="bg-white p-4 rounded-lg shadow-lg">
							<img src="{{ asset('assets/img/logo-jobiz.png') }}" alt="Jobiz" class="max-w-full h-auto">
						</div>
					</div>
				</div>
			</div>
		</section>

		<!-- Introduction Section -->
		<section class="py-12 bg-gray-50">
			<div class="container mx-auto px-4 md:px-8 max-w-6xl text-center">
				<h2 class="text-3xl font-bold mb-6 text-slate-700">Welcome to Jobiz</h2>
				<p class="text-lg text-gray-600 max-w-3xl mx-auto mb-8">
					Jobiz is a specialized job platform connecting IT professionals with top tech companies. 
																																	                Whether you're looking for development, data science, networking, or system administration positions,
																																	                we've got opportunities that match your skills and career goals.
				</p>
				<div class="w-24 h-1 bg-teal-600 mx-auto"></div>
			</div>
		</section>

		<!-- Featured Jobs Section -->
		<section class="py-16">
			<div class="container mx-auto px-4 md:px-8 max-w-6xl">
				<div class="flex justify-between items-center mb-10">
					<h2 class="text-3xl font-bold text-slate-700">Latest Job Offers</h2>
					<a href="{{ path('app_job_index') }}" class="text-teal-600 hover:text-teal-800 font-medium flex items-center">
						View all jobs
						<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-1" viewbox="0 0 20 20" fill="currentColor">
							<path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
						</svg>
					</a>
				</div>

				<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
					{% if latest_jobs is empty %}
						<div class="col-span-3 text-center py-12">
							<p class="text-lg text-gray-500">No job offers available at the moment.</p>
						</div>
					{% else %}
						{% for job in latest_jobs %}
							{{ component('JobCard', {
								title: job.title,
								company: job.company.name,
								companyInitials: job.company.name|slice(0, 2)|upper,
								location: job.city ~ ', ' ~ job.country,
								description: job.description|striptags|slice(0, 120) ~ '...',
								jobType: job.jobType.name,
								job_id: job.id,
								remoteAllowed: job.remoteAllowed,
								jobTypeClass: job.jobType.name == 'Full-time' ? 'bg-teal-100 text-teal-800' : 
											 (job.jobType.name == 'Remote' ? 'bg-blue-100 text-blue-800' : 
											 (job.jobType.name == 'Contract' ? 'bg-purple-100 text-purple-800' : 
											 (job.jobType.name == 'Part-time' ? 'bg-amber-100 text-amber-800' : 
											 (job.jobType.name == 'Internship' ? 'bg-green-100 text-green-800' : 
											 'bg-gray-100 text-gray-800'))))
							}) }}
						{% endfor %}
					{% endif %}
				</div>
			</div>
		</section>

		<!-- CTA Section -->
		<section class="bg-teal-600 py-12 text-white">
			<div class="container mx-auto px-4 md:px-8 max-w-6xl text-center">
				<h2 class="text-3xl font-bold mb-6">Ready to Find Your Next Opportunity?</h2>
				<p class="text-xl mb-8 max-w-2xl mx-auto">Browse our comprehensive database of IT jobs and take the next step in your tech career.</p>
				<a href="{{ path('app_job_index') }}" class="bg-white text-teal-600 hover:bg-gray-100 py-3 px-8 rounded-full font-medium inline-block transition">
					Explore All Jobs
				</a>
			</div>
		</section>
	</div>
{% endblock %}
